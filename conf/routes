# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*       /                                       module:secure

# Import CRUD routes
*       /admin                                  module:crud

# Home page
GET     /                                       Application.index

GET     /auteur/ajouter                         AuteurAction.ajouter

GET     /auteur/rechercher                      AuteurAction.rechercher

GET     /auteur/enregistrer                     AuteurAction.enregistrer

GET     /auteur/modifier/{id}                   AuteurAction.modifier

GET     /auteur/{id}                            AuteurAction.afficher

# Les actions concernant les books

GET     /book/afficher/{id}                    LivreAction.afficher

GET     /book/ajouter                          LivreAction.ajouter

GET     /book/modifier/{id}                    LivreAction.modifier

GET     /book/enregistrer                      LivreAction.enregistrer

GET     /book/rechercher                       LivreAction.rechercher

GET     /book/pagination                       LivreAction.pagination

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
